# Dockerfile
FROM node:18

# Crear directorio de trabajo
WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json ./

# Instalar dependencias
RUN npm install

# Copiar el resto del c√≥digo
COPY . .

# Exponer el puerto
EXPOSE 3001

# Comando para iniciar la app
CMD ["npm", "run", "listen"]
